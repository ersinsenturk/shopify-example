{% case media.media_type %}
    {% when 'image' %}
        <img
            src="{{ media |  image_url: width: 500  }}"
            width=""
            height=""
            class="w-full h-full object-cover"
            alt="{{ media.preview_image.alt }}">
    {% when 'video' %}
        {{ media
            | video_tag: controls: true, class: 'w-full h-80 object-cover' }}
    {% when 'external_video' %}
        {{ media
            | external_video_tag: class: 'w-full h-80 object-cover' }}
    {% when 'model' %}
        {{ media | model_viewer_tag }}
    {% else %}
        {{ media | media_tag: class: 'w-full h-80 object-cover' }}
{% endcase %}

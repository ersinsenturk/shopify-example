<div x-data="{loginForm: true, pwRecover: false}" class="flex h-full items-center justify-center py-12 px-6">
    <div x-show="loginForm" class="max-w-md w-full space-y-6">
        <div>
            <h1 class="text-center text-3xl font-bold mt-6">
                Sign in to your account
            </h1>
        </div>
        <div class="mt-8">
            {% form 'customer_login' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="font-bold">Error!
                        </strong>
                        <p class="block sm:inline">
                            {{ form.errors | default_errors }}
                        </p>
                    </div>
                {% endif %}
                <div class="my-2">
                    <label for="email_address">Email address
                    </label>
                    <input
                        type="email"
                        name="customer[email]"
                        id="email_address"
                        autocomplete="email"
                        class="relative block w-full px-3 py-2 border">
                </div>
                {% if form.password_needed %}
                    <div class="my-2">
                        <label for="password">
                            Password
                        </label>
                        <input
                            type="password"
                            name="customer[password]"
                            id="password"
                            class="relative block w-full px-3 py-2 border">
                    </div>
                {% endif %}
                <div class="my-2 text-sm">
                    <button
                        type="button"
                        class="underline text-gray-500"
                        @click="loginForm = false; pwRecover= true">
                        Forgot your password?
                    </button>
                </div>
                <div class="my-2">
                    <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600">Sign in
                    </button>
                </div>
            {% endform %}
        </div>
        {% if shop.checkout.guest_login %}
            <hr class="my-12">
            <div class="">
                <h1 class="mt-6 text-center text-3xl font-bold">Continue as a guest
                </h1>
            </div>
            {% form 'guest_login' %}
                <div class="my-2">
                    <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600">
                        Continue
                    </button>
                </div>
            {% endform %}
        {% endif %}
    </div>
    <div x-show="pwRecover" class="max-w-md w-full space-y-6">
        <div>
            <h1 class="text-center text-3xl font-bold mt-6">
                Recover password
            </h1>
        </div>
        <div class="mt-8">
            {% form 'recover_customer_password' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="font-bold">Error!
                        </strong>
                        <p class="block sm:inline">
                            {{ form.errors | default_errors }}
                        </p>
                    </div>
                {% endif %}
                <div class="my-2">
                    <label for="email">Email address
                    </label>
                    <input
                        type="email"
                        name="email"
                        id="email"
                        autocomplete="email"
                        class="relative block w-full px-3 py-2 border">
                </div>

                <div class="my-2">
                    <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600">
                        Recover password
                    </button>
                </div>

                <div class="my-2 text-sm">
                    <button
                        type="button"
                        class="underline text-gray-500"
                        @click="loginForm = true; pwRecover= false">
                        Back to login
                    </button>
                </div>
            {% endform %}
        </div>
    </div>
</div>
